meta(charset="utf-8")
meta(name="X-UA-Compatible", content="IE=edge")

title 
    block site_title
        = config.title
block description
    meta(name="description", content= config.description ? config.description : 'A Blog Powered By Hexo')

meta(name="viewport", content="width=device-width, initial-scale=1")
link(rel="icon", href=url_for(theme.favicon))
link(rel="stylesheet", href=url_for("css/my.css"))
link(rel="stylesheet", href=url_for("css/github-markdown.css"))
link(rel="stylesheet", href=url_for("//cdn.bootcss.com/highlight.js/9.2.0/styles/github.min.css"))
script(src="//cdn.bootcss.com/highlight.js/9.2.0/highlight.min.js")
script(src="https://code.jquery.com/jquery-3.3.1.min.js")
- var xml = config.url + '/atom.xml'
    link(rel="search", type="application/opensearchdescription+xml", href=xml, title=config.title)
